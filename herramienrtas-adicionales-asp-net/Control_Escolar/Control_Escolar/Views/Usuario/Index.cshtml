
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaUsuarios").DataTable();
        });

        function agregarUsuario() {
            //Hacemos una redireccion a
            document.location = "/Usuario/Add/";
        }

        function editarUsuario(idUsuario) {
            //Hacemos una redireccion a
            document.location = "/Usuario/Edit/" + idUsuario;
        }

        function borrarUsuario(idUsuario) {
            console.log(idUsuario);
            document.location = "/Usuario/Delete/" + idUsuario;
        }
    </script>
    <h1>Administración de Usuarios</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Usuario" onclick="agregarUsuario()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaUsuarios" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Primer Nombre</th>
                <th>Segundo Nombre</th>
                <th>Primer Apellido</th>
                <th>Segundo Apellid</th>
                <th>Correo</th>
                <th>Numero Fijo</th>
                <th>Numero Movil</th>
                <th>Ubicacion</th>
                <th>Status</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in ViewData["catalogoUsuarios"] as List<Control_Escolar.Models.Usuario>)
            {
                <tr>
                    <td>@usuario.ID</td>
                    <td>@usuario.PrimerNombre</td>
                    <td>@usuario.SegundoNombre</td>
                    <td>@usuario.PrimerApellido</td>
                    <td>@usuario.SegundoApellido</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.NumeroFijo</td>
                    <td>@usuario.NumeroMovil</td>
                    <td>@usuario.Ubicacion.Nombre</td>
                    <td>@usuario.Status.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarUsuario('@usuario.ID')" />
                        <input type="button" value="Borrar" onclick="borrarUsuario('@usuario.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>