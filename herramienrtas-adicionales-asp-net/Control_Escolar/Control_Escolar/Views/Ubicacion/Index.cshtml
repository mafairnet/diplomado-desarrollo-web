
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaUbicacions").DataTable();
        });

        function agregarUbicacion() {
            //Hacemos una redireccion a
            document.location = "/Ubicacion/Add/";
        }

        function editarUbicacion(idUbicacion) {
            //Hacemos una redireccion a
            document.location = "/Ubicacion/Edit/" + idUbicacion;
        }

        function borrarUbicacion(idUbicacion) {
            console.log(idUbicacion);
            document.location = "/Ubicacion/Delete/" + idUbicacion;
        }
    </script>
    <h1>Administración de Ubicaciones</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Ubicacion" onclick="agregarUbicacion()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaUbicacions" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Calle</th>
                <th>Numero Exterior</th>
                <th>Numero Interior</th>
                <th>Codigo Postal</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ubicacion in ViewData["catalogoUbicaciones"] as List<Control_Escolar.Models.Ubicacion>)
            {
                <tr>
                    <td>@ubicacion.ID</td>
                    <td>@ubicacion.Nombre</td>
                    <td>@ubicacion.Calle.Nombre</td>
                    <td>@ubicacion.NumeroExterior</td>
                    <td>@ubicacion.NumeroInterior</td>
                    <td>@ubicacion.CodigoPostal</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarUbicacion('@ubicacion.ID')" />
                        <input type="button" value="Borrar" onclick="borrarUbicacion('@ubicacion.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>