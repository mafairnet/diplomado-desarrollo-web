
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaCarreras").DataTable();
        });

        function agregarCarrera() {
            //Hacemos una redireccion a
            document.location = "/Carrera/Add/";
        }

        function editarCarrera(idCarrera) {
            //Hacemos una redireccion a
            document.location = "/Carrera/Edit/" + idCarrera;
        }

        function borrarCarrera(idCarrera) {
            console.log(idCarrera);
            document.location = "/Carrera/Delete/" + idCarrera;
        }

        function asignaturasCarrera(idCarrera) {
            console.log(idCarrera);
            document.location = "/AsignaturaCarrera/Index/" + idCarrera;
        }
    </script>
    <h1>Administración de Carreras</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Carrera" onclick="agregarCarrera()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaCarreras" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Status</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var carrera in ViewData["catalogoCarreras"] as List<Control_Escolar.Models.Carrera>)
            {
                <tr>
                    <td>@carrera.ID</td>
                    <td>@carrera.Nombre</td>
                    <td>@carrera.Status.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarCarrera('@carrera.ID')" />
                        <input type="button" value="Borrar" onclick="borrarCarrera('@carrera.ID')" />
                        <input type="button" value="Asignaturas" onclick="asignaturasCarrera('@carrera.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>