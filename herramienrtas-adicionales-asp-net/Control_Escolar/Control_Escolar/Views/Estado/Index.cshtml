
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaEstados").DataTable();
        });

        function agregarEstado() {
            //Hacemos una redireccion a
            document.location = "/Estado/Add/";
        }

        function editarEstado(idEstado) {
            //Hacemos una redireccion a
            document.location = "/Estado/Edit/" + idEstado;
        }

        function borrarEstado(idEstado) {
            console.log(idEstado);
            document.location = "/Estado/Delete/" + idEstado;
        }
    </script>
    <h1>Administración de Estados</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Estado" onclick="agregarEstado()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaEstados" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Pais</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var periodo in ViewData["catalogoEstados"] as List<Control_Escolar.Models.Estado>)
            {
                <tr>
                    <td>@periodo.ID</td>
                    <td>@periodo.Nombre</td>
                    <td>@periodo.Pais.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarEstado('@periodo.ID')" />
                        <input type="button" value="Borrar" onclick="borrarEstado('@periodo.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>