
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaCursos").DataTable();
        });

        function agregarCurso() {
            //Hacemos una redireccion a
            document.location = "/Curso/Add/";
        }

        function editarCurso(idCurso) {
            //Hacemos una redireccion a
            document.location = "/Curso/Edit/" + idCurso;
        }

        function borrarCurso(idCurso) {
            console.log(idCurso);
            document.location = "/Curso/Delete/" + idCurso;
        }
    </script>
    <h1>Administración de Cursos</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Curso" onclick="agregarCurso()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaCursos" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Periodo</th>
                <th>Asignatura</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in ViewData["catalogoCursos"] as List<Control_Escolar.Models.Curso>)
            {
                <tr>
                    <td>@curso.ID</td>
                    <td>@curso.Nombre</td>
                    <td>@curso.Periodo.Nombre</td>
                    <td>@curso.Asignatura.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarCurso('@curso.ID')" />
                        <input type="button" value="Borrar" onclick="borrarCurso('@curso.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>