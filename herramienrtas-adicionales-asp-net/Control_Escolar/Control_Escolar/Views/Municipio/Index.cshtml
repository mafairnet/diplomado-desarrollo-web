
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaMunicipios").DataTable();
        });

        function agregarMunicipio() {
            //Hacemos una redireccion a
            document.location = "/Municipio/Add/";
        }

        function editarMunicipio(idMunicipio) {
            //Hacemos una redireccion a
            document.location = "/Municipio/Edit/" + idMunicipio;
        }

        function borrarMunicipio(idMunicipio) {
            console.log(idMunicipio);
            document.location = "/Municipio/Delete/" + idMunicipio;
        }
    </script>
    <h1>Administración de Municipios</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Municipio" onclick="agregarMunicipio()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaMunicipios" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var municipio in ViewData["catalogoMunicipios"] as List<Control_Escolar.Models.Municipio>)
            {
                <tr>
                    <td>@municipio.ID</td>
                    <td>@municipio.Nombre</td>
                    <td>@municipio.Estado.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarMunicipio('@municipio.ID')" />
                        <input type="button" value="Borrar" onclick="borrarMunicipio('@municipio.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>