
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaCalles").DataTable();
        });

        function agregarCalle() {
            //Hacemos una redireccion a
            document.location = "/Calle/Add/";
        }

        function editarCalle(idCalle) {
            //Hacemos una redireccion a
            document.location = "/Calle/Edit/" + idCalle;
        }

        function borrarCalle(idCalle) {
            console.log(idCalle);
            document.location = "/Calle/Delete/" + idCalle;
        }
    </script>
    <h1>Administración de Calles</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Calle" onclick="agregarCalle()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaCalles" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Localidad</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var calle in ViewData["catalogoCalles"] as List<Control_Escolar.Models.Calle>)
            {
                <tr>
                    <td>@calle.ID</td>
                    <td>@calle.Nombre</td>
                    <td>@calle.Localidad.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarCalle('@calle.ID')" />
                        <input type="button" value="Borrar" onclick="borrarCalle('@calle.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>