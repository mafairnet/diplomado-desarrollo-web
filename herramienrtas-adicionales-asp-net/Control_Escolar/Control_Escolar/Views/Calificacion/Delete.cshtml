@model Control_Escolar.Models.Calificacion
@{
    var calificacion = ViewData["calificacion"] as Control_Escolar.Models.Calificacion;
}
    <h1>Borrar Calificacion</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Detalles de Calificacion: @calificacion.ID</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => calificacion.ID)

    <div class="form-group">
        @Html.LabelFor(model => calificacion.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => calificacion.Valor, new { htmlAtributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => calificacion.Valor, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <h4>¿Seguro que desea borrar el calificacion?</h4>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Borrar" class=" btn-default" />
        </div>
    </div>

</div>
        //@Html.Action("Regresar al catalogo de Usuarios", "Index")
    }