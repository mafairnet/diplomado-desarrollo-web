
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaStatus").DataTable();
        });

        function agregarStatus() {
            //Hacemos una redireccion a
            document.location = "/Status/Add/";
        }

        function editarStatus(idStatus) {
            //Hacemos una redireccion a
            document.location = "/Status/Edit/" + idStatus;
        }

        function borrarStatus(idStatus) {
            console.log(idStatus);
            document.location = "/Status/Delete/" + idStatus;
        }
    </script>
    <h1>Administración de Status</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Status" onclick="agregarStatus()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaStatus" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in ViewData["catalogoStatuses"] as List<Control_Escolar.Models.Status>)
            {
                <tr>
                    <td>@status.ID</td>
                    <td>@status.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarStatus('@status.ID')" />
                        <input type="button" value="Borrar" onclick="borrarStatus('@status.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>