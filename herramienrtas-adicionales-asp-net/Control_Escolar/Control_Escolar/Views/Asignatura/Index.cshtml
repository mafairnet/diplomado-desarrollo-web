
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaAsignaturas").DataTable();
        });

        function agregarAsignatura() {
            //Hacemos una redireccion a
            document.location = "/Asignatura/Add/";
        }

        function editarAsignatura(idAsignatura) {
            //Hacemos una redireccion a
            document.location = "/Asignatura/Edit/" + idAsignatura;
        }

        function borrarAsignatura(idAsignatura) {
            console.log(idAsignatura);
            document.location = "/Asignatura/Delete/" + idAsignatura;
        }

        
    </script>
    <h1>Administración de Asignaturas</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Asignatura" onclick="agregarAsignatura()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaAsignaturas" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Status</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asignatura in ViewData["catalogoAsignaturas"] as List<Control_Escolar.Models.Asignatura>)
            {
                <tr>
                    <td>@asignatura.ID</td>
                    <td>@asignatura.Nombre</td>
                    <td>@asignatura.Status.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarAsignatura('@asignatura.ID')" />
                        <input type="button" value="Borrar" onclick="borrarAsignatura('@asignatura.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>