
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tablaLocalidads").DataTable();
        });

        function agregarLocalidad() {
            //Hacemos una redireccion a
            document.location = "/Localidad/Add/";
        }

        function editarLocalidad(idLocalidad) {
            //Hacemos una redireccion a
            document.location = "/Localidad/Edit/" + idLocalidad;
        }

        function borrarLocalidad(idLocalidad) {
            console.log(idLocalidad);
            document.location = "/Localidad/Delete/" + idLocalidad;
        }
    </script>
    <h1>Administración de Localidades</h1>
    <br />
    <div class="row">
        <div class="col-md-6 bg-light text-right">
        </div>
        <div class="col-md-2 bg-light text-right">
            <input type="button" value="Agregar Localidad" onclick="agregarLocalidad()" />
        </div>
        <div class="col-md-4 bg-light text-right">
            @Html.Partial("~/Views/Shared/Buscador.cshtml")
        </div>
    </div>
    <br />

    <table id="tablaLocalidads" class="display" style="width:90%;margin-left:auto;scroll-margin-right:auto;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>MUnicipio</th>
                <th>Controles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var localidad in ViewData["catalogoLocalidades"] as List<Control_Escolar.Models.Localidad>)
            {
                <tr>
                    <td>@localidad.ID</td>
                    <td>@localidad.Nombre</td>
                    <td>@localidad.Municipio.Nombre</td>
                    <td>
                        <input type="button" value="Editar" onclick="editarLocalidad('@localidad.ID')" />
                        <input type="button" value="Borrar" onclick="borrarLocalidad('@localidad.ID')" />
                    </td>
                </tr>
            }


        </tbody>
    </table>